<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:paddingLeft="0dp"
    android:paddingRight="25dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.86"
        android:background="@drawable/chat_item_2"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_date"
                android:text="2016-16-16"
                android:textColor="#78c118"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center"/>

            <LinearLayout
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_status_payed_from"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/text_background_requset"
                    android:gravity="center"
                    android:text="درخواست داده شده"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/txt_priceFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:maxLength="9"
                    android:gravity="right|center"
                    android:text="قیمت"
                    android:textColor="#cb5958" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_description_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:text="توضیحات:بابت دنگ مسافرت شمال" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_cancel_pay"
                    android:textColor="#7a7a7a"
                    android:layout_marginLeft="1dp"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/btn_cancel_from_background"
                    android:layout_weight="0.5"
                    android:text="لغو"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>

                <Button
                    android:id="@+id/btn_accept_pay"
                    android:textColor="#7a7a7a"
                    android:layout_marginLeft="1dp"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/btn_cancel_from_background"
                    android:text="@string/accept_text"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="-10dp"
        android:id="@+id/txt_clock"
        android:layout_marginLeft="-25dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:gravity="center|bottom"
        android:paddingBottom="5dp"
        android:drawableTop="@drawable/ic_time_little"
        android:layout_gravity="center"
        android:background="@drawable/circle_clock_text_background"
        android:text="12:58"/>

</LinearLayout>