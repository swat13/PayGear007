<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <chatListItem android:gravity="top|left">
        <shape>
            <solid android:color="#a3a3a3"/>
            <corners android:radius="255dp"/>
            <stroke
                android:width="20dp"
                android:color="#a3a3a3"/>
            <size
                android:width="150dp"
                android:height="150dp"/>
        </shape>
    </chatListItem>
    <chatListItem
        android:gravity="center" android:left="110dp" android:top="60dp">
        <shape>
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="20dp"
                android:color="#a3a3a3"/>
            <corners android:radius="255dp"/>
            <size
                android:width="200dp"
                android:height="200dp"/>
        </shape>
    </chatListItem>
</layer-list>